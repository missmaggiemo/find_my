<% content_for :navbar do %>
  <%= render 'layouts/user_menu' %>
<% end %>

<% content_for :page do %>

<div class="container user-show">

  <div class="row">
    <div class="col-md-3" id="profile-pic-container">
      <div class="gravatar">
        <img src="http://www.gravatar.com/avatar/<%= @email_hash %>?s=150&r=pg">
      </div>
      <div class="info">
        <p>Email: <%= @user.email %></p>
        <p>User since: <%= @user.created_at.strftime("%B %d, %Y") %></p>
      </div>
    </div>

    <div class="col-md-7" id="profile-info-container">
      <div class="profile-header">
          <h1 id="user-welcome"><%= @user.username %></h1>
      </div>  

      <p>TODO: </p>
      <p>See location?</p>

      <p>See recent ratings? <span class="rating"><%- 5.times do %><span class="glyphicon glyphicon-star"></span><% end -%></span></p>

      <p>See favorite places? Can <span class="favorite"><span class="glyphicon glyphicon-heart-empty"></span></span> businesses?</p>
        
      <p>See recent searches? Create a recent_search join table that saves each search that a user makes when they're logged in and deletes the old ones?</p>


    </div>
  
  </div>
  
</div>

<% end %>