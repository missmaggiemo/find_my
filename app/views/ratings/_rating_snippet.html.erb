<div class="rating-snip activity-snip" id="fav-<%= rating.id %>">
  <a href="<%= business_url(biz) %>" class="biz-link">
    <div class="row">
      <div class="yelp-pic col-xs-3">
        <img src="<%= biz.image_url %>" class="img-responsive">
      </div>
      <div class="biz-info col-xs-9">
        <h4><%= biz.name %><br>
          <small><span class="rating">
            <% rating.stars.to_i.times do %>
              <span class="glyphicon glyphicon-star"></span>
            <% end %>
          </span></small>
        </h4>
      </div>      
    </div>
  </a>
</div>