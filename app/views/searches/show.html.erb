<% content_for :headers do %>
  
<%= render partial: 'layouts/map', locals: {center: @center} %>

<% end %>


<%= content_for :page do %>

<div id="map-canvas" style="width: 100%; height: 50vh; display: block; text-align: center"></div>

<p id="notice"><%= notice %></p>

<div id="results_list">
  
  <% @business_results. each do |business| %>
    <%= render partial: 'business_snippet', locals: {business: business} %>
  <% end %>
  
</div>

<%= link_to 'Edit', edit_search_path(@search) %> |
<%= link_to 'Back', searches_path %>

<% end %>
