<div class="biz-snippet">
  <h3><%= link_to business[:name], business_path(business) %></h3>
  <p>Rating: 
    <% business[:rating].to_i.times do %>
      <span class="glyphicon glyphicon-star rating"></span>
    <% end %>
    <% if business[:rating] - business[:rating].to_i > 0 %>
      <span class="glyphicon glyphicon-star-empty rating"></span>
    <% end %>
  </p>
  <p>Number of Reviews: <%= business[:review_count]%></p>
  <p>Address: <%= business.location.display_address %></p>
  <p>Phone Number: <%= business[:display_phone] %></p>
  <hr class="biz-hr">  
</div>
